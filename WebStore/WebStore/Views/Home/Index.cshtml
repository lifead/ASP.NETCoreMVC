@model List<WebStore.Models.EmployeeView>
@using WebStore.Models

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Фамилия Имя Отчество</th>
                <th>Возраст</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (EmployeeView item in Model)
            {
                <tr>
                    <td>@item.EmployeeId</td>
                    <td>@item.FIO</td>
                    <td>@item.Age</td>
                    <td><a href="~/Home/Details?employeeId=@item.EmployeeId">Подробнее</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
